<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stx.JP.Mobile.Views.Common.AcknowledgementPage"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" >
                <Image HeightRequest="60" />
                <Label Text="Thank you!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="20" />
            </StackLayout>
            <Button Grid.Row="1" Text="Close" HorizontalOptions="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>