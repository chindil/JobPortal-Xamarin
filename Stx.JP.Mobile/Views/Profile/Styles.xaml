    <!--Common follwer resume entry title label style-->
    <Style x:Key="ResumeEntryHeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{DynamicResource Gray-900}"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        <!--<Setter Property="FontFamily" Value="{StaticResource Montserrat-Bold}"/>-->
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5,Default=-1}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    <!--Common follwer resume entry sub-title label style-->
    <Style x:Key="ResumeEntrySubHeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <!--<Setter Property="FontFamily" Value="{StaticResource Montserrat-Medium}"/>-->
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5,Default=-1}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    <!--Common follwer resume entry year label style-->
    <Style x:Key="ResumeEntryPeriodLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{DynamicResource Gray-600}"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="FontFamily" Value="{StaticResource Montserrat-Medium}"/>
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5,Default=-1}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    <!--Common follwer resume entry detail label style-->
    <Style x:Key="ResumeEntryDetailLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        <Setter Property="FontFamily" Value="{StaticResource Montserrat-Medium}"/>
        <Setter Property="LineHeight" Value="{OnPlatform Android=1,Default=-1}"/>
    </Style>
    <!--  Common style for rounded buttons  -->
    <Style x:Key="GradientButtonStyle" TargetType="buttons:SfButton">
        <Setter Property="BorderColor" Value="{DynamicResource Gray-300}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="WidthRequest" Value="44" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BackgroundGradient">
            <Setter.Value>
                <graphics:SfLinearGradientBrush>
                    <graphics:SfLinearGradientBrush.GradientStops>
                        <graphics:SfGradientStop Offset="0" Color="{DynamicResource PrimaryColor}" />
                        <graphics:SfGradientStop Offset="1" Color="{DynamicResource PrimaryGradient}" />
                    </graphics:SfLinearGradientBrush.GradientStops>
                </graphics:SfLinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>